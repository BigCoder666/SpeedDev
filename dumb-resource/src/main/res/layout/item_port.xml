<?xml version="1.0" encoding="utf-8"?>
<me.tx.app.ui.widget.banner.RatioLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:ratio="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/circle"
            android:src="@drawable/fc_port"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:src="@drawable/fc_port_inside_empty"
            android:id="@+id/state"/>

        <TextView
            android:id="@+id/number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/t_12"
            android:textStyle="bold" />
    </RelativeLayout>
</me.tx.app.ui.widget.banner.RatioLayout>